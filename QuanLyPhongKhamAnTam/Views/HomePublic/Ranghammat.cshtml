@{
    ViewBag.Title = "Răng Hàm Mặt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom Banner Style */
    .dental-hero {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5)), url('/Content/images/Ranghammat.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 150px 0;
        text-align: center;
        position: relative;
    }

    .dental-hero h1 {
        font-size: 2.8rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 20px;
    }

    .dental-hero p {
        font-size: 1.3rem;
        max-width: 700px;
        margin: 0 auto;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    /* Service Card Styles */
    .service-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        height: 100%;
        border-left: 4px solid #0d6efd;
        padding: 20px;
        margin-bottom: 20px;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
    }

    .service-icon {
        font-size: 40px;
        color: #0d6efd;
        margin-bottom: 15px;
    }

    /* Benefit Card Styles */
    .benefit-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f8f9fa;
        text-align: center;
        height: 100%;
    }

    .benefit-card:hover {
        box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
        transform: translateY(-5px);
    }

    .benefit-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 15px;
    }

    /* Doctor Card Styles */
        .doctor-card {
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.05);
    text-align: center;
    padding: 20px;
    height: 100%;
}

.doctor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
}

    .doctor-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 20px;
        border: 3px solid #0d6efd;
    }

    /* Testimonial Styles */
    .testimonial-card {
        border-left: 4px solid #0d6efd;
        background-color: #f8f9fa;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 0 8px 8px 0;
    }

    .testimonial-card .blockquote-footer {
        color: #ffffff
;
        font-size: 0.9rem;
    }

    /* Process Styles */
    .process-step {
        position: relative;
        padding-left: 80px;
        margin-bottom: 30px;
    }

    .process-number {
        position: absolute;
        left: 0;
        top: 0;
        width: 60px;
        height: 60px;
        background-color: #0d6efd;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: bold;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .dental-hero {
            padding: 100px 0;
        }
        
        .dental-hero h1 {
            font-size: 2rem;
        }
        
        .dental-hero p {
            font-size: 1.1rem;
        }
        
        .doctor-info {
            margin-top: 15px;
        }
        
        .process-step {
            padding-left: 60px;
        }
        
        .process-number {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
    .sidebar {
    position: sticky;
    top: 20px;
    height: fit-content;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    padding: 20px;
}

.sidebar .nav-link {
    color: #495057;
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.sidebar .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 3px;
    height: 100%;
    background-color: transparent;
    transition: all 0.3s ease;
}

.sidebar .nav-link:hover {
    background-color: #f0f7ff;
    color: #0d6efd;
    transform: translateX(5px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
}

.sidebar .nav-link:hover::before {
    background-color: #0d6efd;
}

.sidebar .nav-link.active {
    background-color: #e9f7fe;
    color: #0d6efd;
    font-weight: 500;
    transform: translateX(5px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
}

.sidebar .nav-link.active::before {
    background-color: #0d6efd;
}

.sidebar .nav-link i {
    width: 20px;
    text-align: center;
    margin-right: 10px;
    color: inherit;
    transition: all 0.3s ease;
}

.sidebar h5 {
    color: #212529;
    font-weight: 600;
    padding-bottom: 10px;
    margin-bottom: 15px;
    border-bottom: 1px solid #e9ecef;
}
.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
}
</style>

