@{
    ViewBag.Title = "Giới thiệu phòng khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .about-hero {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/Content/Images/about-bg.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 205px 0;
        text-align: center;
        background-image: url('/Content/Images/doingubacsi.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-color: rgba(0, 0, 0, 0.5); /* Màu overlay */
        background-blend-mode: overlay; /* Trộn màu overlay với ảnh nền */
    }
    
    .about-section {
        padding: 60px 0;
    }
    
    .about-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s;
        margin-bottom: 30px;
        height: 100%;
    }
    
    .about-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
    }
    
    .about-icon {
        font-size: 50px;
        color: #1E90FF;
        margin-bottom: 20px;
    }

    .core-value {
        background-color: rgba(255, 255, 255, 0.7);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }
    .core-values-section {
        position: relative;
        padding: 60px 0;
    }
    .core-values-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url('/Content/Images/background_gioithieu.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* Hiệu ứng parallax */
        opacity: 1 ; /* Độ trong suốt của ảnh nền */
        z-index: -1;
    }
    .core-value:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        background-color: rgba(255, 255, 255, 0.8);
    }
    .doctor-card {
        text-align: center;
        padding: 20px;
    }
    
    .doctor-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto 20px;
        border: 3px solid #1E90FF;
    }

    /* Sidebar styles */
    .sidebar {
        position: sticky;
        top: 20px;
        height: fit-content;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        padding: 20px;
    }

    .sidebar .nav-link {
        color: #495057;
        padding: 10px 15px;
        border-radius: 8px;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .sidebar .nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 3px;
        height: 100%;
        background-color: transparent;
        transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover {
        background-color: #f0f7ff;
        color: #0d6efd;
        transform: translateX(5px);
        box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
    }

    .sidebar .nav-link:hover::before {
        background-color: #0d6efd;
    }

    .sidebar .nav-link.active {
        background-color: #e9f7fe;
        color: #0d6efd;
        font-weight: 500;
        transform: translateX(5px);
        box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
    }

    .sidebar .nav-link.active::before {
        background-color: #0d6efd;
    }

    .sidebar .nav-link i {
        width: 20px;
        text-align: center;
        margin-right: 10px;
        color: inherit;
        transition: all 0.3s ease;
    }

    .sidebar h5 {
        color: #212529;
        font-weight: 600;
        padding-bottom: 10px;
        margin-bottom: 15px;
        border-bottom: 1px solid #e9ecef;
    }
</style>

<!-- Hero Section -->
<section class="about-hero">
    <div class="container position-relative">
        <h1 class="display-4 fw-bold mb-4">Về Phòng Khám Đa Khoa An Tâm</h1>
        <p class="lead">Hơn 12 năm đồng hành chăm sóc sức khỏe cộng đồng</p>
    </div>
</section>

