@{
    ViewBag.Title = "KhamSK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom Banner Style */
    .service-hero {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5)), url('/Content/Images/khamsuckhoedoanhnghiep.png');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 150px 0;
        text-align: center;
        position: relative;
    }

    .service-hero h1 {
        font-size: 2.8rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 20px;
    }

    .service-hero p {
        font-size: 1.3rem;
        max-width: 700px;
        margin: 0 auto;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    /* Sidebar styles */
    .sidebar {
        position: sticky;
        top: 20px;
        height: fit-content;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        padding: 20px;
    }

    .sidebar .nav-link {
        color: #495057;
        padding: 10px 15px;
        border-radius: 8px;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .sidebar .nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 3px;
        height: 100%;
        background-color: transparent;
        transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover {
        background-color: #f0f7ff;
        color: #0d6efd;
        transform: translateX(5px);
        box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
    }

    .sidebar .nav-link:hover::before {
        background-color: #0d6efd;
    }

    .sidebar .nav-link.active {
        background-color: #e9f7fe;
        color: #0d6efd;
        font-weight: 500;
        transform: translateX(5px);
        box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
    }

    .sidebar .nav-link.active::before {
        background-color: #0d6efd;
    }

    .sidebar .nav-link i {
        width: 20px;
        text-align: center;
        margin-right: 10px;
        color: inherit;
        transition: all 0.3s ease;
    }

    .sidebar h5 {
        color: #212529;
        font-weight: 600;
        padding-bottom: 10px;
        margin-bottom: 15px;
        border-bottom: 1px solid #e9ecef;
    }

    /* Benefit card styles */
    .benefit-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
        transform: translateY(-5px);
        height: 100%;
        border-left: 4px solid #1E90FF;
    }
    .benefit-icon {
        font-size: 40px;
        color: #1E90FF;
        margin-bottom: 15px;
    }

    /* Document list styles */
    .document-list {
        list-style: none;
        padding-left: 0;
    }

    .document-list li {
        margin-bottom: 10px;
        padding-left: 25px;
        position: relative;
    }

    .document-list li::before {
        content: "\f00c";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        color: #1E90FF;
        position: absolute;
        left: 0;
        top: 0;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .service-hero {
            padding: 100px 0;
        }
        
        .service-hero h1 {
            font-size: 2rem;
        }
        
        .service-hero p {
            font-size: 1.1rem;
        }
    }
</style>

