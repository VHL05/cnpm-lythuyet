}
    <style>
        .service-hero {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/Content/Images/noitonghop.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 150px 0;
            text-align: center;
            position: relative;
        }

        .service-hero h1 {
            font-size: 2.8rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
        }

        .service-detail h2 {
            color: #0d6efd;
            margin-top: 30px;
            margin-bottom: 15px;
        }

        .sidebar {
    position: sticky;
    top: 20px;
    height: fit-content;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    padding: 20px;
}

.sidebar .nav-link {
    color: #495057;
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.sidebar .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 3px;
    height: 100%;
    background-color: transparent;
    transition: all 0.3s ease;
}

.sidebar .nav-link:hover {
    background-color: #f0f7ff;
    color: #0d6efd;
    transform: translateX(5px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
}

.sidebar .nav-link:hover::before {
    background-color: #0d6efd;
}

.sidebar .nav-link.active {
    background-color: #e9f7fe;
    color: #0d6efd;
    font-weight: 500;
    transform: translateX(5px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
}

.sidebar .nav-link.active::before {
    background-color: #0d6efd;
}

.sidebar .nav-link i {
    width: 20px;
    text-align: center;
    margin-right: 10px;
    color: inherit;
    transition: all 0.3s ease;
}

.sidebar h5 {
    color: #212529;
    font-weight: 600;
    padding-bottom: 10px;
    margin-bottom: 15px;
    border-bottom: 1px solid #e9ecef;
}
        .service-content {
    background: #fff;
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.03);
}

.intro-section {
    border-bottom: 1px solid #eee;
    padding-bottom: 20px;
}

.card {
    transition: transform 0.3s ease;
    margin-bottom: 25px;
}

.card:hover {
    transform: translateY(-5px);
}

.process-steps .step {
    display: flex;
    margin-bottom: 20px;
    align-items: flex-start;
}

.process-steps .step-number {
    background-color: #0d6efd;
    color: white;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
    flex-shrink: 0;
    font-weight: bold;
}

.benefit-item {
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.05);
}

.benefit-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}

.icon-box {
    transition: all 0.3s ease;
}

.service-item:hover .icon-box {
    background-color: #0d6efd !important;
}

.service-item:hover .icon-box i {
    color: white !important;
}

.disease-category {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    height: 100%;
}
.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
}
    </style>

