<style>
    /* Custom Banner Style */
    .pediatric-hero {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5)), url('/Content/Images/nhikhoa.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 150px 0;
        text-align: center;
        position: relative;
    }

    .pediatric-hero h1 {
        font-size: 2.8rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 20px;
    }

    .pediatric-hero p {
        font-size: 1.3rem;
        max-width: 700px;
        margin: 0 auto;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    /* Service Card Styles */
    .service-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        height: 100%;
        border-left: 4px solid #0d6efd;
        padding: 20px;
        margin-bottom: 20px;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(13, 110, 253, 0.15);
    }

    .service-icon {
        font-size: 40px;
        color: #0d6efd;
        margin-bottom: 15px;
    }

    /* Feature Box Styles */
    .feature-box {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 30px;
        margin-bottom: 30px;
        border-top: 3px solid #0d6efd;
    }
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
    }

    /* Doctor Card Styles */
    .doctor-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f8f9fa;
    }

    .doctor-card:hover {
        box-shadow: 0 10px 25px rgba(0, 123, 255, 0.2);
        transform: translateY(-5px);
    }

    .doctor-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 20px;
        border: 3px solid #0d6efd;
    }

    /* Testimonial Styles */
    .testimonial-card {
        border-left: 4px solid #0d6efd;
        background-color: #f8f9fa;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 0 8px 8px 0;
    }

    .testimonial-card .blockquote-footer {
        color: #ffffff;
        font-size: 0.9rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .pediatric-hero {
            padding: 100px 0;
        }
        
        .pediatric-hero h1 {
            font-size: 2rem;
        }
        
        .pediatric-hero p {
            font-size: 1.1rem;
        }
        
        .doctor-info {
            margin-top: 15px;
        }
    }
