<style>
.container-fluid {
    padding-left: 0px; 
    padding-right: 0px; 
}

.sidebar {
    position: sticky;
    top: 20px;
    height: fit-content;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    padding: 20px;
}

.sidebar .nav-link {
    color: #495057;
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.sidebar .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 3px;
    height: 100%;
    background-color: transparent;
    transition: all 0.3s ease;
}

.sidebar .nav-link:hover {
    background-color: #f0f7ff;
    color: #0d6efd;
    transform: translateX(5px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
}

.sidebar .nav-link:hover::before {
    background-color: #0d6efd;
}

.sidebar .nav-link.active {
    background-color: #e9f7fe;
    color: #0d6efd;
    font-weight: 500;
    transform: translateX(5px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);
}

.sidebar .nav-link.active::before {
    background-color: #0d6efd;
}

.sidebar .nav-link i {
    width: 20px;
    text-align: center;
    margin-right: 10px;
    color: inherit;
    transition: all 0.3s ease;
}

.sidebar h5 {
    color: #212529;
    font-weight: 600;
    padding-bottom: 10px;
    margin-bottom: 15px;
    border-bottom: 1px solid #e9ecef;
}

.hover-shadow:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 123, 255, 0.2) !important;
    transform: translateY(-5px);
    transition: all 0.3s ease;
}

.service-hero {
    padding: 100px 0;
    position: relative;
}

.service-hero .container {
    position: relative;
    z-index: 2;
}

.service-hero h1 {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    margin-bottom: 20px;
    font-size: 2.5rem;
}

.service-hero p {
    font-size: 1.25rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
