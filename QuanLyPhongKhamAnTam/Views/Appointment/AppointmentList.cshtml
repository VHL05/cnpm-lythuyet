@model List<QuanLyPhongKhamAnTam.Models.Appointment>
@{
    ViewBag.Title = "AppointmentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3><i class="fas fa-list"></i> DANH SÁCH LỊCH HẸN</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Mã số</th>
                        <th>Bác sĩ</th>
                        <th>Ngày giờ</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.AppointmentID</td>
                            <td>@item.Doctor.FullName</td>
                            <td>@item.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.Status == "Scheduled")
                                {
                                    <span class="badge bg-warning">Đã đặt</span>
                                }
                                else if (item.Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đã hủy</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

