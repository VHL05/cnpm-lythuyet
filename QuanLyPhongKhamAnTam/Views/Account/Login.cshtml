@model QuanLyPhongKhamAnTam.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Trang chủ phòng khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(120deg, #2980b9, #6dd5fa);
        height: 100vh;
    }

    .login-box {
        background: #fff;
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 350px;
    }

        .login-box h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .login-box input[type="text"],
        .login-box input[type="password"] {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 6px;
            transition: 0.3s;
        }

            .login-box input[type="text"]:focus,
            .login-box input[type="password"]:focus {
                border-color: #2980b9;
                box-shadow: 0 0 5px rgba(41, 128, 185, 0.5);
                outline: none;
            }

        .login-box input[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #2980b9;
            border: none;
            border-radius: 6px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .login-box input[type="submit"]:hover {
                background-color: #2573a6;
            }

        .login-box .register-link {
            margin-top: 15px;
            text-align: center;
        }

            .login-box .register-link a {
                text-decoration: none;
                color: #2980b9;
            }

                .login-box .register-link a:hover {
                    text-decoration: underline;
                }

    .field-validation-error {
        color: red;
        font-size: 13px;
        margin-top: -8px;
        margin-bottom: 10px;
    }

    .validation-summary-errors {
        color: red;
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<body>
    <div class="login-box">
        <h2>Đăng nhập</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.TextBoxFor(m => m.Username, new { placeholder = "Tên đăng nhập", required = "required" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "field-validation-error" })

            @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })

            <input type="submit" value="Đăng nhập" />

            <div class="register-link">
                <p>Chưa có tài khoản? <a href="/Account/Register">Đăng ký</a></p>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
        }
    </div>
</body>
