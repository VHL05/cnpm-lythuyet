@model QuanLyPhongKhamAnTam.Models.Appointment
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Staff/Views/Shared/_Layout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Bệnh nhân:</dt>
            <dd class="col-sm-9">@Model.Patient.FullName</dd>

            <dt class="col-sm-3">Bác sĩ:</dt>
            <dd class="col-sm-9">@Model.Doctor.FullName</dd>

            <dt class="col-sm-3">Thời gian:</dt>
            <dd class="col-sm-9">@Model.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">
                @if (Model.Status == "Scheduled")
                {
                    <span class="badge bg-warning">Đã đặt</span>
                }
                else if (Model.Status == "Completed")
                {
                    <span class="badge bg-success">Hoàn thành</span>
                }
                else
                {
                    <span class="badge bg-danger">Đã hủy</span>
                }
            </dd>

            <dt class="col-sm-3">Ghi chú:</dt>
            <dd class="col-sm-9">@(Model.Notes ?? "Không có ghi chú")</dd>
        </dl>

        <div class="mt-4">
            <a href="@Url.Action("Edit", new { id = Model.AppointmentID })" class="btn btn-warning">Sửa</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
