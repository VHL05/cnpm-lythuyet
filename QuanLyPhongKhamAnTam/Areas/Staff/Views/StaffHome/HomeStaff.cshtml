@{
    ViewBag.Title = "Dashboard Nhân viên phòng khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse shadow-sm rounded">
            <div class="position-sticky pt-3">
                <h5 class="text-primary px-3 mb-3"><i class="fas fa-clinic-medical me-2"></i>Phòng khám đa khoa An Tâm</h5>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3 active" aria-current="true">
                        <i class="fas fa-users me-2"></i>Quản lý bệnh nhân
                    </a>
                    <a href="@Url.Action("Index", "Receptionist", new { area = "Staff" })" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-calendar-check me-2"></i>Quản lý lịch hẹn
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-file-medical me-2"></i>Thêm bệnh nhân mới
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-file-medical me-2"></i>Hồ sơ bệnh án
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-comments me-2"></i>Tư vấn bệnh nhân
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3"> 
                        <i class="fas fa-flask me-2"></i>Xét nghiệm & Chẩn đoán
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-pills me-2"></i>Quản lý thuốc
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-procedures me-2"></i>Phòng phẫu thuật
                    </a>
                    <a href="#" class="list-group-item list-group-item-action py-2 px-3">
                        <i class="fas fa-money-bill-wave me-2"></i>Thanh toán & Lương
                    </a>
                </div>

                <!-- Thống kê nhanh -->
                <div class="card mt-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <i class="fas fa-chart-bar me-2"></i>Thống kê nhanh
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex justify-content-between align-items-center mb-2">
                                <span><i class="fas fa-user-clock me-2 text-primary"></i>Lịch hẹn hôm nay</span>
                                <span class="badge bg-primary rounded-pill">15</span>
                            </li>
                            <li class="d-flex justify-content-between align-items-center mb-2">
                                <span><i class="fas fa-procedures me-2 text-primary"></i>Bệnh nhân đang điều trị</span>
                                <span class="badge bg-primary rounded-pill">8</span>
                            </li>
                            <li class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-exclamation-circle me-2 text-danger"></i>Trường hợp khẩn cấp</span>
                                <span class="badge bg-danger rounded-pill">2</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 text-primary">Dashboard Nhân viên</h1>
            </div>

            <!-- Thông báo quan trọng -->
            <div class="alert alert-warning rounded-3 shadow-sm d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-triangle me-2 fs-4"></i>
                <div>
                    <strong>Lưu ý:</strong> Hệ thống sẽ bảo trì từ <strong>23:00 đến 01:00</strong> ngày mai.
                </div>
            </div>

            <!-- Dashboard cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card shadow-sm border-primary h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary"><i class="fas fa-calendar-day me-2"></i>Lịch hẹn hôm nay</h5>
                            <p class="card-text display-6 fw-bold">15</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-success h-100">
                        <div class="card-body">
                            <h5 class="card-title text-success"><i class="fas fa-procedures me-2"></i>Bệnh nhân điều trị</h5>
                            <p class="card-text display-6 fw-bold">8</p>
                            <a href="#" class="btn btn-outline-success btn-sm">Xem chi tiết</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-danger h-100">
                        <div class="card-body">
                            <h5 class="card-title text-danger"><i class="fas fa-exclamation-circle me-2"></i>Khẩn cấp</h5>
                            <p class="card-text display-6 fw-bold">2</p>
                            <a href="#" class="btn btn-outline-danger btn-sm">Xử lý ngay</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lịch hẹn hôm nay bảng -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Lịch hẹn hôm nay</h5>
                    <a href="#" class="btn btn-light btn-sm">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Thời gian</th>
                                    <th>Bệnh nhân</th>
                                    <th>Loại khám</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>08:30 - 09:00</td>
                                    <td>Nguyễn Văn An</td>
                                    <td>Khám tổng quát</td>
                                    <td><span class="badge bg-success">Đã đến</span></td>
                                    <td><button class="btn btn-sm btn-outline-primary">Chi tiết</button></td>
                                </tr>
                                <tr>
                                    <td>09:15 - 09:45</td>
                                    <td>Trần Thị Bình</td>
                                    <td>Tái khám</td>
                                    <td><span class="badge bg-warning text-dark">Chờ</span></td>
                                    <td><button class="btn btn-sm btn-outline-primary">Chi tiết</button></td>
                                </tr>
                                <tr>
                                    <td>10:00 - 10:30</td>
                                    <td>Lê Văn Chính</td>
                                    <td>Xét nghiệm</td>
                                    <td><span class="badge bg-secondary">Chưa đến</span></td>
                                    <td><button class="btn btn-sm btn-outline-primary">Chi tiết</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Bệnh nhân cần chú ý -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Bệnh nhân cần chú ý</h5>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-md-4">
                            <div class="card border-danger h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-danger"><i class="fas fa-heartbeat me-2"></i>Khẩn cấp</h5>
                                    <p class="card-text">Bệnh nhân Nguyễn Thị Dung - Sốt cao, huyết áp không ổn định</p>
                                    <a href="#" class="btn btn-outline-danger btn-sm">Xử lý ngay</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-warning h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-warning"><i class="fas fa-clock me-2"></i>Chờ kết quả</h5>
                                    <p class="card-text">Bệnh nhân Phạm Văn Linh - Đang chờ kết quả xét nghiệm máu</p>
                                    <a href="#" class="btn btn-outline-warning btn-sm">Kiểm tra</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-info h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-info"><i class="fas fa-pills me-2"></i>Thuốc đặc biệt</h5>
                                    <p class="card-text">Bệnh nhân Hoàng Thị Phương - Cần theo dõi tác dụng phụ của thuốc</p>
                                    <a href="#" class="btn btn-outline-info btn-sm">Ghi chú</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Biểu đồ và báo cáo -->
            <div class="row g-4 mb-5">
                <div class="col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <i class="fas fa-chart-line me-2"></i>Biểu đồ lịch hẹn theo ngày
                        </div>
                        <div class="card-body">
                            <canvas id="appointmentsChart" height="250"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <i class="fas fa-file-invoice-dollar me-2"></i>Doanh thu tháng
                        </div>
                        <div class="card-body">
                            <canvas id="revenueChart" height="250"></canvas>
                        </div>
                    </div>
                </div>
            </div>

        </main>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ lịch hẹn theo ngày (giả lập dữ liệu)
        const ctxAppointments = document.getElementById('appointmentsChart').getContext('2d');
        const appointmentsChart = new Chart(ctxAppointments, {
            type: 'line',
            data: {
                labels: ['Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7', 'CN'],
                datasets: [{
                    label: 'Số lịch hẹn',
                    data: [12, 19, 14, 22, 18, 24, 20],
                    borderColor: 'rgba(13, 110, 253, 1)',
                    backgroundColor: 'rgba(13, 110, 253, 0.2)',
                    fill: true,
                    tension: 0.3,
                    pointRadius: 5,
                    pointHoverRadius: 7,
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true, stepSize: 5 }
                }
            }
        });

        // Biểu đồ doanh thu tháng (giả lập dữ liệu)
        const ctxRevenue = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(ctxRevenue, {
            type: 'bar',
            data: {
                labels: ['Tuần 1', 'Tuần 2', 'Tuần 3', 'Tuần 4'],
                datasets: [{
                    label: 'Doanh thu (triệu VND)',
                    data: [35, 50, 45, 60],
                    backgroundColor: 'rgba(40, 167, 69, 0.7)',
                    borderColor: 'rgba(40, 167, 69, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        $(document).ready(function () {
            console.log("Dashboard nhân viên phòng khám đã sẵn sàng");
        });
    </script>
}
